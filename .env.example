# PostgreSQL Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/transparent_search
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=transparent_search
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_LOG_LEVEL=debug

# Crawler Configuration
CRAWLER_UA=TransparentSearchBot/1.0 (compatible with search engines)
CRAWLER_TIMEOUT=30
CRAWLER_RETRY_ATTEMPTS=3

# Advanced Features
ENABLE_SMART_CRAWL=true
ENABLE_METADATA_ANALYSIS=true
ENABLE_SPAM_DETECTION=true
ENABLE_INTENT_ANALYSIS=true

# Batch Processing
BATCH_SIZE=100
MAX_CONCURRENT_JOBS=10
MAX_PAGES_PER_CRAWL=10000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
